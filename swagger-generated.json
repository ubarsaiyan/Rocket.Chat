{
  "openapi": "3.0.0",
  "x-api-id": "rc",
  "info": {
    "version": "1.0.2",
    "title": "Rocket.Chat",
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "https://rocket.chat.utkarshbarsaiyan.com/api/v1"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "description": "Login",
        "parameters": [],
        "responses": {
          "200": {
            "description": "It works!"
          },
          "403": {
            "description": "You do not have necessary permissions for the resource"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user": {
                    "type": "string",
                    "description": "Your username or email."
                  },
                  "password": {
                    "type": "string",
                    "description": "Your password."
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users.create": {
      "post": {
        "description": "Creates a new user",
        "parameters": [],
        "responses": {
          "200": {
            "description": "It works!"
          },
          "403": {
            "description": "You do not have necessary permissions for the resource"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "name",
                  "password",
                  "username"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "Email"
                  },
                  "name": {
                    "type": "string",
                    "description": "Name"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password"
                  },
                  "username": {
                    "type": "string",
                    "description": "Username"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users.getPresence": {
      "get": {
        "description": "Gets the online presence of a user",
        "parameters": [
          {
            "in": "query",
            "name": "username",
            "description": "The id or username of the user. If not provided, the auth user is updated.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "It works!"
          },
          "403": {
            "description": "You do not have necessary permissions for the resource"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-Auth-Token"
      },
      "ApiUserAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-User-Id"
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    },
    {
      "ApiUserAuth": []
    }
  ]
}
